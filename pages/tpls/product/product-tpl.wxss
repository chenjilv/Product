.products-box{
display: flex;
margin: 0 20rpx 20rpx 20rpx;
flex-wrap:  wrap;
justify-content: space-between;

}
.products-item{
 width: 49%;
 height: 300rpx;
 border-radius: 10rpx;
 background-color:#F5F6F5;
 text-align: center;
 margin-bottom: 10rpx;
}
.products-image{
  width: 80%;
  height: 60%; 
  margin: 10rpx auto 0 auto;
  border-radius: 10rpx;
}

.products-item-bottom{
  text-align: center;
  margin-bottom:20rpx;
  color: #333; 
}

.products-item-bottom .name{
  font-size: 28rpx;
}
.products-item-bottom .price{
  font-size: 24rpx;
}