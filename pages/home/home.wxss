}

.home-main-header{
 
  display: flex;
  height: 60rpx;
  font-size: 32rpx;
  line-height: 40rpx;
  color: #AB956D;
  background-color: #fff;
  align-items: center;
  justify-content: center;
  margin: 20rpx 0;

}
.main-theme-box{
  display: flex;
  flex-wrap: wrap;
  align-content: space-between;

}
.theme-item{
  display: flex;
  height:375rpx;
  width: 50%;
  border-bottom: 4rpx solid #fff;
  position: relative;
